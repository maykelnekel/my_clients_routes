  "paths": {
    "/api/v1/users/list": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Através dessa rota é possível listar todos os usuários da aplicação.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/users/create": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Através dessa rota é possível criar um usuário.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreationSchema"
              }
            }
          }
        }
      }
    }
  },
